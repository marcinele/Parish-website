{% extends "index.html.twig" %}

{% block style %}
    <link rel="stylesheet" type="text/css" href="/css/reservations.css">

    <!--        ------------------- !-->

    <!-- Default Theme (Core) -->
    <!-- Classic Theme (Core) -->
    <link rel="stylesheet" href="../DatePicker/lib/themes/classic.css">
    <!-- Classic Theme (Date Picker) -->
    <link rel="stylesheet" href="../DatePicker/lib/themes/classic.date.css">
    <!-- Classic Theme (Time Picker If Needed)-->
    <link rel="stylesheet" href="../DatePicker/lib/themes/classic.time.css">


    <!-- Core -->
    <script src="../DatePicker/lib/picker.js"></script>
    <!-- Date Picker -->
    <script src="../DatePicker/lib/picker.date.js"></script>
    <!-- Language -->
    <script src="../DatePicker/lib/translations/pl_PL.js"></script>
    <!-- Required For Legacy Browsers (IE 8-) -->
    <script src="../DatePicker/lib/legacy.js"></script>
    <!-- Time Picker -->
    <script src="../DatePicker/lib/picker.time.js"></script>

    <!--        ------------------- !-->

{% endblock %}

{% block head %}
    <script type="text/javascript" src="/js/reservations.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

{% endblock %}

{% block content %}
    <head>
        <div class="container-fluid p-0">
            <div class="row-fluid">
                <div class="span" id="background_span">
                    <div class="bg-image main-text">
                        <h1 class="mb-3 h2">Rezerwacje miejsc</h1>
                    </div>
                </div>
            </div>
        </div>
    </head>
    <div class="info" style="height: 50px; opacity: 100%">
    </div>
    {% if(session.id is not defined and session.email is not defined) %}
        <div class="container-lg" style="height: 300px;">
        <div class="didntLogin" style="height: 350px; font-size: 36px;">

        <div class="container-lg" style="height: 215px;">
            <div class="didntLogin" style="height: 200px; font-size: 30px;">
                <a href="/login">Zaloguj się </a>, by zarezerwować mszę.
            </div>
        </div>
    {% else %}
        <body class="mainContainer">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-12 mx-auto">
                    <div class="container mainInput">
                        <form id="dataAndTimeForm" method="POST" action="?page=placeReservation&id=1#places">
                            <div class="info">
                                Wybierz datę oraz godzinę mszy na którą chciałbyś zarezerwować miejsce.
                            </div>
                            <div class="container-lg border border-secondary" style="height: 415px;">
                                <div class="row">
                                    <div class="col-md-6 container">
                                        Wybierz datę.
                                    </div>
                                    <div class="col-md-6 container">
                                        Wybierz godzinę.
                                    </div>
                                    <br>
                                    <div class="col-md-6 container">
                                        <input id="exampleDate" class="datepicker" name="date" type="text"/>
                                    </div>
                                    <div class="col-md-6 container">
                                        <input id="exampleTime" class="timepicker" type="time" name="time"
                                               value="Najpierw wybierz dzień."/>
                                    </div>
                                </div>
                            </div>
                            <button class="submitButton" id="submitButton" type="submit">
                                Przejdź dalej <i class="fa fa-arrow-right" aria-hidden="true"></i>
                            </button>
                            <div id="info">Popraw wprowadzone dane.</div>
                            <div style="height: 10px;"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </body>
    {% endif %}
{% endblock %}